# Application
APP_NAME=WAYL AI Platform
SECRET_KEY=your_strong_secret_key_here
DEBUG=false
API_V1_PREFIX=/api/v1
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
POSTGRES_USER=wayl_user
POSTGRES_PASSWORD=strong_db_password_here
POSTGRES_DB=wayl
DATABASE_URL=postgresql://wayl_user:strong_db_password_here@db/wayl

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=strong_redis_password_here
REDIS_DB=0

# Blockchain
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
WAYL_TOKEN_ADDRESS=your_token_contract_address
SOLANA_WALLET_PRIVATE_KEY=your_private_key_here

# Model Settings
MODELS_DIR=./models
MODEL_CACHE_SIZE=2
DEFAULT_MODEL=deepseek-7b
MAX_INPUT_LENGTH=2048
TEMPERATURE=0.7
TOP_P=0.95

# Rate Limiting
DEFAULT_RATE_LIMIT=10
RATE_LIMIT_WINDOW=60

# Monitoring
SENTRY_DSN=your_sentry_dsn
PROMETHEUS_METRICS=true